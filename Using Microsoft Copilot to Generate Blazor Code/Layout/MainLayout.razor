@inherits LayoutComponentBase
@inject UserSessionService userService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        @if (userService.IsLoggedIn)
        {
            <div class="top-row px-4">
                @userService.CurrentUser
            </div>
        }
        else
        {
            <div class="top-row px-4">
                <a href="/register">Registrati</a>
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
